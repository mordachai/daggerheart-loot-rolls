<form class="dh-popup daggerheart-table-dialog">
  <div class="dh-popup__section" style="padding:1rem;">
    <div class="dh-heading dh-text--center" style="margin-bottom:1rem;color:{{rarityColor}};">
      {{dialogTitle}}
    </div>
    <div class="dh-text--center" style="margin-bottom:.5rem;">{{localize headerText}}</div>

    <div style="display:flex;gap:.5rem;flex-wrap:wrap;justify-content:center;margin-bottom:1.25rem;">
      {{#each rarityConfig}}
        <button type="button"
                class="dh-btn dh-btn--primary rarity-btn {{#if this.isActive}}active{{/if}}"
                data-action="select-rarity"
                data-rarity="{{this.key}}"
                title="{{lookup ../rarityRules this.name}}"
                style="--rarity-color: {{this.color}}; border-color: var(--rarity-color);">
          {{this.name}}
        </button>
      {{/each}}
    </div>

    <div style="display:flex;gap:1rem;justify-content:center;margin-bottom:1.5rem;">
      <button type="button" class="dh-btn dh-btn--gold dice-btn" data-action="roll-dice" data-formula="{{dicePair.[0]}}" style="min-width:120px;">
        {{dicePair.[0]}}
      </button>
      <button type="button" class="dh-btn dh-btn--gold dice-btn" data-action="roll-dice" data-formula="{{dicePair.[1]}}" style="min-width:120px;">
        {{dicePair.[1]}}
      </button>
    </div>

    <button type="button" class="dh-btn dh-btn--close" data-action="close" style="width:100%;background:rgba(244,67,54,.2);border:1px solid #f44336;color:#ff6b6b;">
      <i class="fas fa-times" style="margin-right:.5rem;"></i>
      {{localize "DH_TABLES.Close"}}
    </button>
  </div>
</form>
